<%layout("./layouts/baseTemplate.ejs")%>

<div class="container mt-5">
  <h2 class="text-center mb-4">My Job Applications</h2>

  <% if (applications.length === 0) { %>
    <p class="text-center">You have not applied for any jobs yet.</p>
  <% } else { %>
    <div class="row">
      <% applications.forEach(application => { %>
        <div class="col-md-6">
          <div class="card shadow p-3 mb-4">
            <div class="card-body">
              <h5 class="card-title"><%= application.job.title %></h5>
              <p><strong>Applied On:</strong> <%= application.createdAt.toDateString() %></p>
              <p><strong>Cover Letter:</strong> <%= application.coverLetter %></p>
              <p><strong>Status:</strong> <%= application.status %></p>
              <a href="/jobs/<%= application.job._id %>" class="btn btn-primary">View Job</a>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  <% } %>
</div>
